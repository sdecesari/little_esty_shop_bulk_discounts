<h1>Edit Discount</h1>
<%= form_with url: merchant_bulk_discount_path(@merchant, @discount), method: :patch, local: true do |f| %>
  <%= f.label :percent %>
  <%= f.text_field :percent, value: @discount.percent %>
  <%= f.label :threshold %>
  <%= f.text_field :threshold, value: @discount.threshold %>
  <%= f.submit "Submit" %>
<% end %>