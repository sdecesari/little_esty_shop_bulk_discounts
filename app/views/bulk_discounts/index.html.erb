<h1>Bulk Discounts Index Page</h1>

<h2><%= @merchant.name %></h2>
  <%= link_to "New Discount", "/merchant/#{@merchant.id}/bulk_discounts/new", method: :get %>

<% @merchant.bulk_discounts.each do |discount| %>
  <section id='discount-<%= discount.id %>'>
    <p>Percentage Discount: <%= link_to "#{discount.percent}", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}" %> Quantity Threshold: <%= "#{discount.threshold}" %></p>
    <p><%= button_to "Delete", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %></p>
  </section>
<% end %>